@model U3RazasPerros.Models.Razas
@{
    ViewData["Title"] = "Eliminar";
    Layout = "_adminMasterPage";
}
<form method="post" action="~/Admin/Razas/Eliminar">
    <h1>Seguro que Desea Eliminar esta Raza</h1>
    <input asp-for="Razas.Id" type="hidden" name="Id" value="@Model.Id" />
    <input asp-for="Caracteristicasfisicas.Id" type="hidden"  value="@Model.Caracteristicasfisicas" />
    <label>Nombre:</label>
    <br /> <br />
    <h1>@Model.Nombre</h1>
    <br /> <br />
    <div class="botones">
        <p id="error">@Html.ValidationSummary()</p>
        <input type="submit" value="Eliminar" id="btnEliminar" />
        <a href="~/Admin/Razas/">
            <input type="button" value="Cancelar" id="btnCancelar" formnovalidate="formnovalidate" />
        </a>
    </div>
</form>


