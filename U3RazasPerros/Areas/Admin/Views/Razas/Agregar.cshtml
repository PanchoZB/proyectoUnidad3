@model U3RazasPerros.Areas.Admin.Models.AgregarViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

    Layout = "_adminMasterPage";
}

<form method="post" action="~/Admin/Razas/Agregar">
    <div>
        <h1>Agregar Raza</h1>
        <label>Nombre:</label>
        <br /> <br />
        <input type="text" asp-for="Razas.Nombre" id="txtNombre"  required />
        <br /> <br />
        <label>Descripcion:</label>
        <br /> <br />
        <input type="text" asp-for="Razas.Descripcion" id="txtDescripcion" required />
        <br /> <br />
        <label>Pais de origen:</label>
        <br /> <br />
        <select required="required" asp-for="Razas.IdPais"
                asp-items="@(new SelectList(Model.Paises,"Id","Nombre"))">
                   <option selected="selected" value=""> Seleccionar un pais </option>
        </select>
        <br /> <br />
        <label>otros nombres:</label>
        <br /> <br />
        <input type="text" asp-for="Razas.OtrosNombres" id="txtOtrosNombres" required />
        <br /> <br />
        <label>peso maximo:</label>
        <br /> <br />
        <input type="text" asp-for="Razas.PesoMax" id="txtPesoMaximo" required />
        <br /> <br />
        <label>peso minimo:</label>
        <br /> <br />
        <input type="text" asp-for="Razas.PesoMin" id="txtPesoMinimo" required />
        <br /> <br />
        <label>altura maxima:</label>
        <br /> <br />
        <input type="text" asp-for="Razas.AlturaMax" id="txtAlturaMaximo" required />
        <br /> <br />
        <label>altura minima:</label>
        <br /> <br />
        <input type="text" asp-for="Razas.AlturaMin" id="txtAlturaMinima" required />
        <br /> <br />
        <label>esperanza de vida:</label>
        <br /> <br />
        <input type="text" asp-for="Razas.EsperanzaVida" id="txtEsperanzaVida" required />
        <br />  <br />
        <label>Caracteristicas fisicas:</label>
        <br /> <br />
        <label>cola</label>
        <br />  <br />
        <input asp-for="Caracteristicasfisicas.Cola" id="txtcola" required />
        <br /><br />
        <label>patas</label>
        <br /><br />
        <input asp-for="Caracteristicasfisicas.Patas" id="txtpatas" required />
        <br /><br />
        <label>Hocico</label>
        <br /><br />
        <input asp-for="Caracteristicasfisicas.Hocico" id="txthocico" required />
        <br /><br />
        <label>pelo</label>
        <br /><br />
        <input asp-for="Caracteristicasfisicas.Pelo" id="txtpelo" required />
        <br /><br />
        <label>color</label>
        <br /><br />
        <input asp-for="Caracteristicasfisicas.Color" id="txtcolor" required />
        <br /><br />
        <div class="botones">
            <p id="error">@Html.ValidationSummary()</p>
            <input type="submit" value="Agregar" id="btnAgregar" />
            <a href="~/Admin/Razas/">
                <input type="button" value="Cancelar" id="btnCancelar" formnovalidate="formnovalidate" />
            </a>
        </div>
    </div>
</form>
